<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Basic Gallery</title>
	<script type="module" src="../script/script.js"></script>
	<link rel="stylesheet" type="text/css" href="../css/style.css">
</head>
<body>
	<h2 style="text-align:center">Gallery </h2>
	{{#each images}}
	<div>{{author}}</div>
	{{/each}}
	<div class="container">

		<!-- Full-width images with number text -->
		<div class="mySlides">
			<div class="numbertext">1 / 5</div>
			<img style="width:100%">
		</div>
		
		<div class="mySlides">
			<div class="numbertext">2 / 5</div>
			<img style="width:100%">
		</div>
		
		<div class="mySlides">
			<div class="numbertext">3 / 5</div>
			<img  style="width:100%">
		</div>
		
		<div class="mySlides">
			<div class="numbertext">4 / 5</div>
			<img  style="width:100%">
		</div>
		
		<div class="mySlides">
			<div class="numbertext">5 / 5</div>
			<img style="width:100%">
		</div>
		
		
		<!-- Next and previous buttons -->
		<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
		<a class="next" onclick="plusSlides(1)">&#10095;</a>
		
		<!-- Image text -->
		<div class="caption-container">
			<p id="caption"></p>
		</div>
		
		<!-- Thumbnail images -->
		<div class="row">
			<div class="column">
			<img class="cursor" style="width:100%" onclick="currentSlide(1)" alt="The Woods">
			</div>
			<div class="column">
			<img class="cursor" style="width:100%" onclick="currentSlide(2)" alt="Cinque Terre">
			</div>
			<div class="column">
			<img class="cursor" style="width:100%" onclick="currentSlide(3)" alt="Mountains and fjords">
			</div>
			<div class="column">
			<img class="cursor" style="width:100%" onclick="currentSlide(4)" alt="Northern Lights">
			</div>
			<div class="column">
			<img class="cursor" style="width:100%" onclick="currentSlide(5)" alt="Nature and sunrise">
			</div>
			<div class="column">
			<img class="cursor"  style="width:100%" onclick="currentSlide(6)" alt="Snowy Mountains">
			</div>
		</div>
	</div>
</body>
</html>